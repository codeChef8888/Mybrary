<% bookCoverClass = locals.large ? 'book-cover-large' : '' %>
<% bookGridClass = locals.large ? 'book-grid-large' : '' %>
<div class="book-grid <%= bookGridClass %>">
  <% books.forEach(book => { %>
    <a href="/books/<%= book.id %>">
    <a href="/books/<%= book.id %>" ><img height="150" width="100" src="<%= book.coverImagePath %>" title="<%= book.title %> <%= book.publishDate.toISOString().split('T')[0]%>"> 
    </a>
  <% }) %>
</div>